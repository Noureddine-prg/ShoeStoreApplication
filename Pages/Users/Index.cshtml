@page
@model Shoe_Store_Application.Pages.Users.IndexModel
@{


}

<div class="wrapper">

    <h1>List of Users</h1>

    <a class="btn btn-primary btn-sm" href="/Users/Register?id=">New User</a> 

    <table class="table">
        <thead>
            <tr>
                <th> ID </th>
                <th> Name </th>
                <th> Email </th>
                <th> Password </th>
                <th> Created At </th>
                <th> Action </th>
            </tr>
        </thead>

        <tbody>


        </tbody>
    
        <!-- goes through each element in list -->
        @foreach (var item in Model.listUsers) {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.password</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Users/Edit?id=">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Users/Delete?id=">Delete</a>
                </td>
            </tr>
        }
    </table>


</div>
